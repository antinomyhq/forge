{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "core:path:default", 
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-copy-file",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" }, 
        { "path": "$APPDATA/**" },
        { "path": "$HOME" },
        { "path": "$HOME/**" },
        { "path": "$DOCUMENT" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$CONFIG/**" },
        { "path": "$CONFIG/.env" }
      ]
    }
  ]
}