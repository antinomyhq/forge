<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conversation: {{id}}</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        h1, h2, h3 {
            color: #2c3e50;
        }
        h1 {
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
        }
        .section {
            margin: 20px 0;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
            border: 1px solid #eee;
        }
        .agent, .event, .variable {
            margin: 10px 0;
            padding: 15px;
            background-color: white;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .agent-header, .event-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid #eee;
        }
        pre {
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
            overflow-x: auto;
        }
        code {
            font-family: monospace;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Conversation: {{id}}</h1>
    
    <div class="section">
        <h2>Basic Information</h2>
        <p>ID: {{id}}</p>
        <p>Archived: {{archived}}</p>
    </div>

    <div class="section">
        <h2>Agents ({{agents.length}})</h2>
        {{#each agents}}
        <div class="agent">
            <div class="agent-header">
                <h3>{{id}}</h3>
                {{#if model}}<span>Model: {{model}}</span>{{/if}}
            </div>
            {{#if custom_rules}}
            <div>
                <h4>Custom Rules</h4>
                <pre>{{custom_rules}}</pre>
            </div>
            {{/if}}
            {{#if description}}
            <div>
                <h4>Description</h4>
                <p>{{description}}</p>
            </div>
            {{/if}}
            {{#if subscribe}}
            <div>
                <h4>Subscriptions</h4>
                <ul>
                    {{#each subscribe}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
            {{#if temperature}}
            <p>Temperature: {{temperature}}</p>
            {{/if}}
            {{#if max_turns}}
            <p>Max Turns: {{max_turns}}</p>
            {{/if}}
            {{#if max_walker_depth}}
            <p>Max Walker Depth: {{max_walker_depth}}</p>
            {{/if}}
        </div>
        {{/each}}
    </div>

    <div class="section">
        <h2>Events ({{events.length}})</h2>
        {{#each events}}
        <div class="event">
            <div class="event-header">
                <h3>{{name}}</h3>
                <span>ID: {{id}}</span>
            </div>
            {{#if content}}
            <div>
                <h4>Content</h4>
                <pre>{{content}}</pre>
            </div>
            {{/if}}
            {{#if metadata}}
            <div>
                <h4>Metadata</h4>
                <pre>{{json metadata}}</pre>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </div>

    <div class="section">
        <h2>Variables</h2>
        <table>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
            {{#each variables}}
            <tr>
                <td>{{@key}}</td>
                <td><pre>{{json this}}</pre></td>
            </tr>
            {{/each}}
        </table>
    </div>

    {{#if state}}
    <div class="section">
        <h2>Agent States</h2>
        {{#each state}}
        <div class="agent">
            <h3>{{@key}}</h3>
            <p>Turn Count: {{turn_count}}</p>
            
            {{#if context}}
            <div>
                <h4>Context</h4>
                <pre>{{json context}}</pre>
            </div>
            {{/if}}
            
            {{#if queue.length}}
            <div>
                <h4>Event Queue ({{queue.length}})</h4>
                <ul>
                    {{#each queue}}
                    <li>{{name}} (ID: {{id}})</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </div>
    {{/if}}
</body>
</html>