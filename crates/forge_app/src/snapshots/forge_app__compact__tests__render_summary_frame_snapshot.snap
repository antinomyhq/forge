76:impl From<&Context> for ContextSummary {
77:    fn from(value: &Context) -> Self {
78:        let mut messages = vec![];
79:        let mut buffer: Vec<SummaryMessageBlock> = vec![];
80:        let mut tool_results: HashMap<&ToolCallId, &ToolResult> = Default::default();
81:        let mut current_role = Role::System;
82:        for msg in &value.messages {
83:            match msg {
84:                ContextMessage::Text(text_msg) => {
85:                    // Skip system messages
86:                    if text_msg.role == Role::System {
87:                        continue;
88:                    }
89:
90:                    if current_role != text_msg.role {
91:                        // Only push if buffer is not empty (avoid empty System role at start)
92:                        if !buffer.is_empty() {
93:                            messages.push(SummaryMessage {
94:                                role: current_role,
95:                                messages: std::mem::take(&mut buffer),
96:                            });
97:                        }
98:
99:                        current_role = text_msg.role;
100:                    }
101:
102:                    buffer.extend(Vec::<SummaryMessageBlock>::from(text_msg));
103:                }
104:                ContextMessage::Tool(tool_result) => {
105:                    if let Some(ref call_id) = tool_result.call_id {
106:                        tool_results.insert(call_id, tool_result);
107:                    }
108:                }
109:                ContextMessage::Image(_) => {}
110:            }
111:        }
112:
113:        // Insert the last chunk if buffer is not empty
114:        if !buffer.is_empty() {
115:            messages
116:                .push(SummaryMessage { role: current_role, messages: std::mem::take(&mut buffer) });
117:        }
118:
119:        messages
120:            .iter_mut()
121:            .flat_map(|message| message.messages.iter_mut())
122:            .filter_map(|tool_info| {
123:                tool_info
124:                    .tool_call_id
125:                    .as_ref()
126:                    .and_then(|id| tool_results.get(id))
127:                    .map(|result| (result, tool_info))
128:            })
129:            .for_each(|(result, tool_info)| tool_info.tool_call_success = Some(!result.is_error()));
130:
131:        ContextSummary { messages }
132:    }
133:}
